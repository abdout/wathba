# ================================================
# ENVIRONMENT VARIABLES CONFIGURATION
# ================================================
# Copy this file to .env.local for development
# Never commit .env.local to version control

# ================================================
# APP CONFIGURATION
# ================================================
# Application URL (required for emails and webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin email for role-based access
ADMIN_EMAIL=admin@alwathbacoop.ae

# ================================================
# DATABASE (PostgreSQL with Prisma)
# ================================================
# Pooled connection for general queries
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Direct connection for migrations
DIRECT_URL=postgresql://username:password@host/database?sslmode=require

# ================================================
# CLERK AUTHENTICATION
# ================================================
# Get your keys from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/onboarding

# ================================================
# SOCIAL OAUTH PROVIDERS (Optional)
# ================================================
# These are set up in Clerk Dashboard under Social Connections
# No additional environment variables needed - Clerk handles the OAuth flow
# Configure these providers in your Clerk Dashboard:
# 1. Go to https://dashboard.clerk.com/last-active?path=user-management/social-connections
# 2. Enable Google and Facebook providers
# 3. Add your OAuth app credentials from each provider
#
# For production, ensure you have:
# - Google OAuth 2.0 credentials from Google Cloud Console
# - Facebook App credentials from Facebook Developers
# - Proper redirect URIs configured in both providers

# ================================================
# IMAGEKIT CDN
# ================================================
# Get your keys from https://imagekit.io/dashboard/developer/api-keys
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=public_your_public_key_here
IMAGEKIT_PRIVATE_KEY=private_your_private_key_here

# ================================================
# STRIPE PAYMENT PROCESSING
# ================================================
# Get your keys from https://dashboard.stripe.com/apikeys
# Test keys start with sk_test_ and pk_test_
# Live keys start with sk_live_ and pk_live_
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key

# ================================================
# EMAIL SERVICE (Resend)
# ================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# Default from email address
EMAIL_FROM=noreply@alwathbacoop.ae

# ================================================
# RATE LIMITING (Upstash Redis)
# ================================================
# Get your credentials from https://console.upstash.com
# Optional: Will use mock values if not provided
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ================================================
# MONITORING (Optional)
# ================================================
# Sentry error tracking
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=https://your_key@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ================================================
# ANALYTICS (Optional)
# ================================================
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ================================================
# FEATURE FLAGS (Optional)
# ================================================
# Enable/disable features
ENABLE_REVIEWS=false
ENABLE_WISHLIST=false
ENABLE_CHAT=false

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
# Node environment (development/production)
NODE_ENV=development

# Debug mode
DEBUG=false